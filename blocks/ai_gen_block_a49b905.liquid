{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    width: 100%;
    gap: {{ block.settings.section_gap }}px;}

  @media screen and (max-width: 749px) {
    .ai-split-showcase-{{ ai_gen_id }} {
      flex-direction: column;
    }
  }

  .ai-split-showcase__column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-split-showcase__left-column-{{ ai_gen_id }} {
    background-color: {{ block.settings.left_background_color }};
    padding: {{ block.settings.left_padding_top }}px {{ block.settings.left_padding_right }}px {{ block.settings.left_padding_bottom }}px {{ block.settings.left_padding_left }}px;
  }

  .ai-split-showcase__right-column-{{ ai_gen_id }} {
    background-color: {{ block.settings.right_background_color }};
    padding: {{ block.settings.right_padding_top }}px {{ block.settings.right_padding_right }}px {{ block.settings.right_padding_bottom }}px {{ block.settings.right_padding_left }}px;
  }

  .ai-split-showcase__image-container-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    margin-bottom: {{ block.settings.image_bottom_margin }}px;
  }

  .ai-split-showcase__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16/9;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 200px;
  }

  .ai-split-showcase__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin-bottom: {{ block.settings.subtitle_margin }}px;
    color: {{ block.settings.subtitle_color }};
    font-weight: {{ block.settings.subtitle_weight }};
  }

  .ai-split-showcase__details-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.details_gap }}px;
  }

  .ai-split-showcase__details-column-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-split-showcase__detail-item-{{ ai_gen_id }} {
    margin-bottom:8px;
    font-size: {{ block.settings.details_text_size }}px;
    color: {{ block.settings.details_text_color }};
    font-weight: {{ block.settings.details_text_weight }};
  }

  .ai-split-showcase__detail-label-{{ ai_gen_id }} {
    font-weight: {{ block.settings.details_label_weight }};
  }

  .ai-split-showcase__right-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;}

  .ai-split-showcase__right-icon-title-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: center;
    margin-bottom: {{ block.settings.title_margin }}px;
  }

  .ai-split-showcase__icon-container-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-split-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    text-align: center;
    color: {{ block.settings.title_color }};
  }

  .ai-split-showcase__right-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.right_subtitle_size }}px;
    margin-bottom: {{ block.settings.right_subtitle_margin }}px;
    text-align: left;
    color: {{ block.settings.right_subtitle_color }};
    font-weight: {{ block.settings.right_subtitle_weight }};
  }

  .ai-split-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    text-align: left;
    font-weight: {{ block.settings.description_weight }};
  }

  @media screen and (max-width: 749px) {
    .ai-split-showcase__details-container-{{ ai_gen_id }} {
      {% if block.settings.columns_mobile == 1 %}
        flex-direction: column;
      {% else %}
        flex-direction: row;{% endif %}
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <!-- Left Column -->
  <div class="ai-split-showcase__column-{{ ai_gen_id }} ai-split-showcase__left-column-{{ ai_gen_id }}">
    <!-- Left Image -->
    <div class="ai-split-showcase__image-container-{{ ai_gen_id }}">
      {% if block.settings.left_image %}
        <img
          src="{{ block.settings.left_image | image_url: width: 1200 }}"
          alt="{{ block.settings.left_image.alt | escape }}"
          loading="lazy"
          class="ai-split-showcase__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-split-showcase__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
    <!-- Left Subtitle -->
    <div class="ai-split-showcase__subtitle-{{ ai_gen_id }}">{{ block.settings.left_subtitle }}</div>

    <!-- Two Divs Side by Side -->
    <div class="ai-split-showcase__details-container-{{ ai_gen_id }}">
      <!-- Div 1 -->
      <div class="ai-split-showcase__details-column-{{ ai_gen_id }}">
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_1_label }}:</span>
          {{ block.settings.detail_1_value }}
        </div>
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_2_label }}:</span>
          {{ block.settings.detail_2_value }}
        </div>
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_3_label }}:</span>
          {{ block.settings.detail_3_value }}
        </div>
      </div>

      <!-- Div 2 -->
      <div class="ai-split-showcase__details-column-{{ ai_gen_id }}">
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_4_label }}:</span>
          {{ block.settings.detail_4_value }}
        </div>
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_5_label }}:</span>
          {{ block.settings.detail_5_value }}
        </div>
        <div class="ai-split-showcase__detail-item-{{ ai_gen_id }}">
          <span class="ai-split-showcase__detail-label-{{ ai_gen_id }}">{{ block.settings.detail_6_label }}:</span>
          {{ block.settings.detail_6_value }}
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column -->
  <div class="ai-split-showcase__column-{{ ai_gen_id }} ai-split-showcase__right-column-{{ ai_gen_id }}">
    <div class="ai-split-showcase__right-content-{{ ai_gen_id }}">
      <!-- Icon/Image and Title (Centered) -->
      <div class="ai-split-showcase__right-icon-title-{{ ai_gen_id }}">
        <div class="ai-split-showcase__icon-container-{{ ai_gen_id }}">
          {% if block.settings.right_image %}
            <img
              src="{{ block.settings.right_image | image_url: width: block.settings.icon_size }}"
              alt="{{ block.settings.right_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.icon_size }}"
              height="{{ block.settings.icon_size }}"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}
        </div>
        <h2 class="ai-split-showcase__title-{{ ai_gen_id }}">{{ block.settings.right_title }}</h2>
      </div>

      <!-- Subtitle (Left Aligned) -->
      <div class="ai-split-showcase__right-subtitle-{{ ai_gen_id }}">{{ block.settings.right_subtitle }}</div>

      <!-- Description (Left Aligned) -->
      <div class="ai-split-showcase__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    </div>
  </div>
</div>

